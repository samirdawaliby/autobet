# AutoBet Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APP SETTINGS
# =============================================================================
DEBUG=false
MODE=dry  # dry, semi-auto, auto
SCAN_INTERVAL_SECONDS=60
SPORTS=["tennis", "soccer"]

# =============================================================================
# ODDS API (for scanning odds from multiple bookmakers)
# Get your free API key at: https://the-odds-api.com/
# =============================================================================
ODDS_API_API_KEY=your_api_key_here
ODDS_API_ENABLED=true

# =============================================================================
# EXCHANGES (for automatic bet execution)
# =============================================================================

# Betfair Exchange
# Register at: https://developer.betfair.com/
BETFAIR_ENABLED=false
BETFAIR_APP_KEY=
BETFAIR_USERNAME=
BETFAIR_PASSWORD=
BETFAIR_CERT_PATH=
BETFAIR_COMMISSION=0.05

# Smarkets Exchange
# Register at: https://smarkets.com/
SMARKETS_ENABLED=false
SMARKETS_API_KEY=
SMARKETS_COMMISSION=0.02

# Matchbook Exchange
# Register at: https://www.matchbook.com/
MATCHBOOK_ENABLED=false
MATCHBOOK_USERNAME=
MATCHBOOK_PASSWORD=
MATCHBOOK_COMMISSION=0.02

# =============================================================================
# TELEGRAM ALERTS
# Create a bot with @BotFather and get your chat_id with @userinfobot
# =============================================================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ENABLED=true
TELEGRAM_ALERT_MIN_EDGE=0.5

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
RISK_INITIAL_BANKROLL=1000.0
RISK_MAX_STAKE_PERCENT=0.02
RISK_MAX_DAILY_STAKE_PERCENT=0.10
RISK_MAX_DAILY_DRAWDOWN_PERCENT=0.05
RISK_MIN_EDGE_PERCENT=0.8
RISK_MAX_ODDS_AGE_SECONDS=5.0
RISK_KILL_SWITCH_ENABLED=false

# =============================================================================
# DATABASE
# =============================================================================
DB_URL=sqlite+aiosqlite:///./autobet.db

# =============================================================================
# CLOUDFLARE (for deployment)
# =============================================================================
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=
